<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
           id="cordova-plugin-ImageCrop"
      version="1.0.4">   <name>CropPlugin</name>
    <description>
        Crop an image in a Cordova app
    </description>
    <license>MIT</license>
    <engines>
        <engine name="cordova-android" version=">=4.0.0" />
    </engines>
    <js-module src="www/crop.js" name="CropPlugin">
        <clobbers target="plugins.crop" />
    </js-module>
    <platform name="android">
        <!-- your configuration elements, references, source files, etc... -->
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="CropPlugin">
                <param name="android-package" value="com.piyush.crop.CropPlugin" />
            </feature>
        </config-file>
        <framework src="src/android/build.gradle" custom="true" type="gradleReference" />
        <resource-file src="cropper-release.aar" target="libs/cropper-release.aar" />
    </platform>
</plugin>
